extends layout

block content
  script(type="text/javascript" src="/javascripts/ng-modules/player/player.module.js")
  script(type="text/javascript" src="/javascripts/ng-modules/player/player.config.js")
  script(type="text/javascript" src="/javascripts/ng-modules/player/player.service.js")
  script(type="text/javascript" src="/javascripts/ng-modules/player/player.controller.js")

  div#playerWrapper(ng-cloak
                    ng-app="player"
                    ng-controller="PlayerController as player")
    div(layout="row" layout-align="center center")
      span.md-display-1(style="padding: 0.5rem 0 0.25rem 0; border-bottom: 1px solid white; margin-bottom: 1rem;") Choose a Player
    div(layout="row" layout-align="center center" layout-wrap)
      md-card(ng-repeat="pc in player.playerList" ng-click="player.selectPlayer(pc._id)" style="width:320px;")
        md-card-title(style="padding:16px; font-family: 'New Rocker', cursive;")
          md-card-title-text.md-display-1 {{ pc.hero_name }}
        md-card-content
          p(style="font-weight: bold;") Level {{ pc.level }}
          p.md-caption Played By {{ pc.mundane_name }}
        //- md-card-actions(layout="row" layout-align="end center")
        //-   md-button.md-warn.md-raised(ng-click="player.deleteplayer($event, room._id)") Delete
    div(layout="row" layout-align="center center")
      md-button.md-raised(ng-click="player.createPlayer()" style="width:320px;")
        h2 Create A New Player
    div(layout="row" layout-align="center center")
      md-button.md-raised.md-primary(ng-click="player.testSkullLord($event)" style="width:320px;")
        h2
          | Actually, I'm a 
          span(style="color: rgb(244, 67, 54); font-family: 'New Rocker', cursive;") Skull Lord